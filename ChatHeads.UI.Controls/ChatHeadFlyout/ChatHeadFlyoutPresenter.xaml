<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ChatHeads.UI.Controls">
    <Thickness x:Key="ChatHeadFlyoutPresenterMargin">12</Thickness>
    <Style TargetType="controls:ChatHeadFlyoutPresenter">
        <Setter Property="Margin" Value="{StaticResource ChatHeadFlyoutPresenterMargin}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ChatHeadFlyoutPresenter">
                    <ItemsPresenter Margin="{TemplateBinding Margin}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>